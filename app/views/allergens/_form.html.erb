<div class='row'>
  <div class='form-horizontal col-lg-6 col-lg-offset-3'>
    <%= form_for(@allergen, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="col-lg-12">
          <%= f.label :category, :class => "label-style text-color-not-ok"%>
        </div>
        <div class="col-lg-12">
          <%= f.text_field :category, id:"form-input", class: "form-control", placeholder: "Name of Allergen", autofocus: true %>
        </div>
      </div>
      <br>
      <div class="form-group">
        <div class="col-lg-12">
          <%= f.label :substances, :class => "label-style text-color-not-ok"%>
        </div>
        <div class="col-lg-12">
          <%= f.text_area :substances, id: "form-textarea", class: "form-control", placeholder: "substance 1; substance2; ... " %>
        </div>
      </div>  
      <div class="form-group col-lg-12 center">
        <button type="submit" class="btn btn-my-primary btn-xlarge">Save</button>
      </div>
    <% end %>
    <br>
    <div class="center">
      <%= link_to "Cancel request and return to products listing", products_path %>
    </div>
  </div>
</div>

