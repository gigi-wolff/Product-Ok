$navbar-default-bg: #465f6e; /* color of navbar */

@import "bootstrap-sprockets";
@import "bootstrap";

* {
  box-sizing: border-box;
}

body { 
  padding-top: 70px;
  font-size: 1.8rem;
}

#add-product {
  display: inline-block;
  float:  right;
  margin-right: 10%;
  font-size: 40px;
}

#add-product > a:hover {
  text-decoration: none;
  color: #3f5f70;
}

#logo {
  /*float: left;*/
  font-size: 4.75rem;
  color: white;
  text-transform: uppercase;
  letter-spacing: -3px;
  font-weight: bold;
  background: transparent url(<%= asset_path 'background-logo.jpg'%>) 82% 92% no-repeat;
}


.label-color {
  color: #00334d;
}

.center-heading {
  text-align: center;
  font-size: 3.7rem;
  text-transform: uppercase;
  letter-spacing: -1px;
  font-weight: bold;
}

.center {
  text-align: center;
  list-style-position: inside;
  clear: left;
}

mark {
  /* background-color: #f2dede; */
  background-color: #ffeb3b8c;
  font-weight: bold;
  color: #800000;
}

.nav .open > a, 
.nav .open > a:hover, 
.nav .open > a:focus,
.nav > li > a:hover,
.nav > li > a:focus {
  background-color: #d8e6f2;
}

.actions {
  display: flex;
  justify-content: center;
  margin-top: 5px;
}

.edit-icon,
.delete-icon,
.show-icon {
  margin-right: 5%;
}

/* ---------- dropdown ----------*/
.dropdown-toggle {
  font-size: 22px;
  color: white;
}

.dropdown-menu {
  min-width: 100%;
  box-shadow: 18px 12px 12px rgba(0, 0, 0, 0.175);
}

.dropdown-menu > li > a {
  background: #f7fafc;
  text-align: center;
  font-size: 2rem;
}

.dropdown-menu > li > a:hover, 
.dropdown-menu > li > a:focus {
  text-decoration: none;
  color: #262626;
  background-color: #d8e6f2;
}

/* -------- buttons ---------*/

/* this creates an xl button and centers it on the page */
.btn {
  white-space: normal !important;
  border: 1px solid;
  border-color: #3d505f !important;
}

.btn-xlarge {
  padding: 18px 48px;
  font-size: 32px; //change this to your desired size
  line-height: normal;
  border-radius: 8px;
}

.btn-lg {
  margin-top: 3px;
}

.btn-my-primary {
  color: white !important;
  background-color: #657c8e  !important; 
  border-left: 3px solid #586c7b !important;
  border-color: #586c7b !important;
}

.btn-my-primary:hover {
  color: #fff !important;
  background-color: #3d5060 !important;
  border-color: #222635 !important;
}

.btn-profile {
  background-color: #465f6e; 
  border: 3px solid white;
  color: white;
  padding: 8px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 20px;
  margin: 2px 2px;
  border-radius: 30px;
  cursor: pointer;
  width: 55px;
}

.btn-profile:hover {
  color: #337ab7;
  border: 3px solid #337ab7;
  background-color: #d8e6f2 !important; 
}

.btn-lg > a,
.btn-profile > a {
  display: inline-block;
  color: white;
  text-decoration: none;
}

.btn-logout {
  width: 150px;
}

.btn-disabled {
  pointer-events: none;
}

.center-btn {
  display: block;
  margin: 0 auto;
}
/* --------- flash -----------*/
.alert-error {
    background-color: #f2dede;
    border-color: #eed3d7;
    color: #b94a48;
    text-align: left;
 }

.alert-alert {
    background-color: #f2dede;
    border-color: #eed3d7;
    color: #b94a48;
    text-align: left;
 }

.alert-success {
    background-color: #dff0d8;
    border-color: #d6e9c6;
    color: #468847;
    text-align: left;
 }

.alert-notice {
    background-color: #dff0d8;
    border-color: #d6e9c6;
    color: #468847;
    text-align: left;
 }

/*--------- Triggers Bootstrap navbar collapse ---------*/

/* (vertically stacks) the navbar at 2300px rather than 768 px*/
@media (max-width: 1250px) {
  .navbar-header {
      float: none;
  }
  .navbar-left,.navbar-right {
      float: none !important;
  }
  .navbar-toggle {
      display: block;
  }
  .navbar-collapse {
      border-top: 1px solid transparent;
      box-shadow: inset 0 1px 0 rgba(255,255,255,0.1);
  }
  .navbar-fixed-top {
      top: 0;
      border-width: 0 0 1px;
  }
  .navbar-collapse.collapse {
      display: none!important;
  }
  .navbar-nav {
      float: none!important;
      margin-top: 7.5px;
  }
  .navbar-nav>li {
      float: none;
  }
  .navbar-nav>li>a {
      padding-top: 10px;
      padding-bottom: 10px;
  }
  .collapse.in{
      display:block !important;
      margin: 20px;
  }

}

