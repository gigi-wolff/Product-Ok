.profile-box {
  background-color: white;
  cursor: text;
  padding: 1px;
  border-width: 2px;
  border-style: inset;
  border-color: initial;
  border-image: initial;
}

.profile-text-box{
    background-color: white;
    border: 1px solid gray;
    height: 100px;
    overflow: auto;
    padding: 2px;
    resize: both;
    width: 400px;
}

.profile-label {
  display: inline-block;
  max-width: 100%;
  margin-bottom: 5px;
  font-size: 3rem;
  font-weight: bold;
}