body {
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-image: url(<%= asset_path 'background-1.jpg' %>);
  background-size: 100% 100%;
  /*background-color and background-blend-mode impact opacity;*/
  background-color: rgba(255, 255, 255, .8) !important;
  background-blend-mode: color;
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
}
#panel-allergen-details {

}

#panel {
  height: 325px;  /*panel(height) = panel-body(height) + panel-heading(height) */
  box-shadow: 6px 6px 10px 6px rgba(32, 77, 113, 0.27) !important;
  margin-bottom: 10%;
}

#panel-heading {
  background-color: #c8d7e4;
  font-size: 1.6rem;
  font-weight: bold;
  text-align: center;
  /*line-height: 100px; */
  height: 100px; /* panel-body height + panel-heading height = panel-height */
}

#panel-body {
  background-color: #e4edf5;
  text-align: center;
  height: 225px; /* panel-body height + panel-heading height = panel-height */
  overflow-y:auto;
  padding: 5%;
}

#enlarge-allergen-panel {
  -webkit-transform:scale(1.8);
  -moz-transform:scale(1.8);
  -ms-transform:scale(1.8);
  transform:scale(1.8);
}

.dropdown-menu > li > a {
  text-align: center;
  font-size: 2rem;
}

.btn {
  white-space: normal !important;
  border: 1px solid;
  border-color: #3d505f !important;
}
.btn-lg {
  margin-top: 3px;
}

.btn-my-primary {
  color: white !important;
  background-color: #657c8e  !important; 
  border-left: 3px solid #586c7b !important;
  border-color: #586c7b !important;
}

.btn-my-primary:hover {
  color: #fff !important;
  background-color: #3d5060 !important;
  border-color: #222635 !important;
}

.badge {
  background-color: #45667a !important;
  margin-top: 25px;
  white-space: normal !important; 
}


