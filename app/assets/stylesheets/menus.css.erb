.menu-action-button{
  color: white;
  background-color: #39823c !important;
  border-color: #aff9ae !important;
}
 
.menu-action-button:hover {
  color: white;
  background-color: #2E6B2D !important;
  border-color: #aff9ae !important;
}

.menu-panel {
  padding: 2%;
  width: 48%;
  display: inline-block;
  float: left;
  font-size: 3rem;
  margin: 10px;
  border: 3px solid #f0f3f5;
  color: #00334d;;
  background: #dce6ef;
  box-shadow: 9px 17px 4px 4px rgba(0, 0, 0, 0.3);
}

/* ---------------custom checkboxes -----------*/
.menu-row {
  display: block;
  position: relative;
  padding-left: 35px;
  margin-bottom: 12px;
  cursor: pointer;
  font-size: 22px;
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
  line-height: normal;
}

/* Hide the browser's default checkbox */
.menu-row input {
  position: absolute;
  opacity: 0;
  cursor: pointer;
  height: 0;
  width: 0;
}

/* Create a custom checkbox */
.checkmark {
  position: absolute;
  top: 0;
  left: 0;
  height: 25px;
  width: 25px;
  background-color: #ffff;
  border: 1px solid #2196F3;
}

/* On mouse-over, add a grey background color */
.menu-row:hover {
  background-color: #f2f6f9;
}

/* When the checkbox is checked, add a blue background */
.menu-row input:checked ~ .checkmark {
  background-color: #2196F3;
}

/* Create the checkmark/indicator (hidden when not checked) */
.checkmark:after {
  content: "";
  position: absolute;
  display: none;
}

/* Show the checkmark when checked */
.menu-row input:checked ~ .checkmark:after {
  display: block;
}

/* Style the checkmark/indicator */
.menu-row .checkmark:after {
  left: 9px;
  top: 5px;
  width: 5px;
  height: 10px;
  border: solid white;
  border-width: 0 3px 3px 0;
  -webkit-transform: rotate(45deg);
  -ms-transform: rotate(45deg);
  transform: rotate(45deg);
}
/*------------------*/
/* For mobile phones: */
@media (max-width: 1100px) {
  .menu-panel {
    width: 100%;
  }
}